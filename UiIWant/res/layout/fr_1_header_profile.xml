<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_background_white"
    android:orientation="horizontal"
    android:paddingRight="5dp" >

    <com.pkmmte.circularimageview.CircularImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:background="@drawable/ic_launcher"
        android:clickable="false"
        app:border_color="#FFFFFFFF"
        app:border_width="4dp"
        app:selector="true"
        app:selector_color="#44ffffff"
        app:selector_stroke_color="#FFFFFFFF"
        app:selector_stroke_width="4dp"
        app:shadow="true" />

    <TextView
        android:id="@+id/textView1"
        style="@style/TitleFont"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/textView3"
        style="@style/Sub1Font"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textView2"
        style="@style/Sub1Font"
        android:layout_gravity="center_vertical"
        android:background="@drawable/chat_gray"
        android:padding="7dp" />

</LinearLayout>