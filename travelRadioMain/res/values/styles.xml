<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- CheckBox RecordList CheckBox -->
    <style name="RecordCheckBox">
        <item name="android:button">@drawable/checkbox_selector_sort</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <!-- CheckBox RecordList CheckBoxInner -->
    <style name="RecordCheckBoxInner">
        <item name="android:button">@drawable/none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- CheckBox RecordCheckBox Upload -->
    <style name="RecordCheckBoxUpload">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@drawable/none</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <!-- CheckBox BasicCheckBox -->
    <style name="BasicCheckBox">
        <item name="android:button">@drawable/checkbox_selector_basic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <!-- CheckBox List Basic -->
    <style name="CheckBoxListBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <!-- CheckBox List Follow -->
    <style name="CheckBoxListFollow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@drawable/checkbox_selector_follow</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <!-- RadioButton_Sort theme. -->
    <style name="RadioButtonSort">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Button_Map_Guard -->
    <style name="ButtonMapRadius">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Button_Record_Upload_Up -->
    <style name="ButtonRecordUploadUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Button_Record Content Down -->
    <style name="ButtonRecordContentDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Button_VoiceBox -->
    <style name="ButtonVoiceBox">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_selector_mybooth</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Button_Mybooth -->
    <style name="ButtonMybooth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_selector_mybooth</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Button_Mybooth_Setting -->
    <style name="ButtonMyboothSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_selector_mybooth_setting</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- ButtonBlackBasic -->
    <style name="ButtonBlackBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_over_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
    </style>

    <!-- Textview_Username -->
    <style name="TextUserName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/user_name</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Textview_TextDate -->
    <style name="TextDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/record_item_date</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!-- Textview_TextPlace -->
    <style name="TextPlace">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/record_item_place</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- ImageView User Face -->
    <style name="imgUserFace">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_launcher</item>
    </style>

    <!-- TextView Blank -->
    <style name="TextViewBlank">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- Textview_None_Data -->
    <style name="TextNone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:text">None Item</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    
    
    <style name="DialogDim" parent="android:Theme.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>