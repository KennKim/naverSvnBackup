<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1followlist_face"
            android:layout_width="70dp"
            android:layout_height="70dp"
            style="@style/imgUserFace"/>

        <TextView
            android:id="@+id/textView1followlist_name"
            style="@style/TextUserName" />

        <TextView
            android:id="@+id/textView1"
            style="@style/TextViewBlank" />
        
        <Button
            android:id="@+id/button_voice_machine"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무전" />

        <Button
            android:id="@+id/button_message_machine"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전보" />


    </LinearLayout>

</LinearLayout>
